{
  "compilerOptions": {
    "target": "es2017",                                
    "module": "commonjs",                           
    "strict": true,                              
    "allowJs": true,   
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },

  "include": [
    "src/**/*.ts"
  ]
}
